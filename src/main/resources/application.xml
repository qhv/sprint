<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <context:property-placeholder location="classpath:application.properties"/>
<!--    or-->
<!--    <bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">-->
<!--        <property name="locations" value="classpath:application.properties"/>-->
<!--    </bean>-->

    <context:annotation-config/>
<!--    or-->
<!--    <bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor"/>-->

    <bean id="driver" class="java.lang.String">
        <constructor-arg type="java.lang.String" value="${db.drver}"/>
    </bean>

    <bean class="qhv.alex.spring.bfpp.LogBeanFactoryPostProcessor"/>
    <bean class="qhv.alex.spring.bfpp.VerifyPropertyBeanFactoryPostProcessor"/>

    <bean class="qhv.alex.spring.bpp.InjectBeanPostProcessor"/>
    <bean class="qhv.alex.spring.bpp.TransactionBeanPostProcessor"/>
    <bean class="qhv.alex.spring.bpp.AuditingBeanPostProcessor"/>

    <bean id="pool1" name="p1,p2,t" class="qhv.alex.spring.database.ConnectionPool.ConnectionPool">
        <constructor-arg name="poolsize" type="java.lang.Integer" value="${db.pool.size}"/>
        <constructor-arg name="args" type="java.util.List">
            <list>
                <value>--arg1=value1</value>
                <value>--arg2=value2</value>
                <ref bean="driver"/>
            </list>
        </constructor-arg>
        <constructor-arg name="username" type="java.lang.String" value="${db.username}"/>
        <constructor-arg name="properties" type="java.util.Map">
<!--            Setting null is bad practice-->
            <null/>
        </constructor-arg>
        <property name="properties">
            <map>
                <entry key="url" value="postgresurl"/>
                <entry key="password" value="525"/>
                <entry key="driver" value="#{driver.substring(4)}"/>
                <entry key="test" value="#{driver.length() > 10}"/>
                <entry key="nextTest" value="#{driver.length() > T(Math).random() * 21}"/>
                <entry key="hosts" value="#{'${db.hosts}'.split(',')}"/>
                <entry key="currentUserSpEl" value="#{systemProperties['user.name']}"/>
                <entry key="currentUserEl" value="${user.name}"/>
            </map>
        </property>
    </bean>

    <bean id="companyRepository" class="qhv.alex.spring.database.repository.CompanyRepository"/>
</beans>